{
  "$schema": "https://mintlify.com/docs.json",
  "name": "RelaxPay",
  "description": "Documentação oficial da API RelaxPay para integração de pagamentos PIX",
  "theme": "mint",
  "logo": {
    "light": "/logo/logo.svg",
    "dark": "/logo/logo.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#8b5cf6",
    "light": "#9e77f7",
    "dark": "#7a43f3"
  },
  "icons": {
    "library": "fontawesome"
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system"
  },
  "background": {
    "light": "#ffffff",
    "dark": "#111827",
    "decoration": "gradient"
  },
  "api": {
    "mdx": {
      "server": "https://ws.relaxpay.api/",
      "auth": {
        "method": "key"
      }
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:suporte@relaxpay.app"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.relaxpay.app"
    }
  },
  "navigation": {
    "versions": [
      {
        "version": "v1",
        "groups": [
          {
            "group": "Começando",
            "pages": [
              "v1/gateway/introduction",
              "v1/gateway/authentication",
              "v1/gateway/environments"
            ]
          },
          {
            "group": "Gateway PIX",
            "pages": [
              "v1/gateway/api-reference",
              "v1/gateway/pix-cash-in",
              "v1/gateway/pix-refund",
              "v1/gateway/pix-status",
              "v1/gateway/pix-cash-out"
            ]
          },
          {
            "group": "Integrações",
            "pages": [
              "v1/gateway/webhooks",
              "v1/gateway/errors"
            ]
          }
        ]
      },
      {
        "version": "v2",
        "groups": [
          {
            "group": "Começando",
            "pages": [
              "v2/gateway/introduction",
              "v2/gateway/authentication",
              "v2/gateway/environments"
            ]
          },
          {
            "group": "Gateway PIX",
            "pages": [
              "v2/gateway/api-reference",
              "v2/gateway/pix-cash-in",
              "v2/gateway/pix-refund",
              "v2/gateway/pix-status",
              "v2/gateway/pix-cash-out"
            ]
          },
          {
            "group": "Integrações",
            "pages": [
              "v2/gateway/webhooks",
              "v2/gateway/errors"
            ]
          }
        ]
      }
    ]
  },
  "footerSocials": {
    "github": "https://github.com/relaxpay",
    "twitter": "https://twitter.com/relaxpay_app"
  },
  "search": {
    "prompt": "Buscar na documentação..."
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  },
  "topbarLinks": [
    {
      "name": "Status",
      "url": "https://status.relaxpay.app"
    }
  ],
  "topbarCtaButton": {
    "name": "Começar Agora",
    "url": "https://dashboard.relaxpay.app/register"
  }
}
